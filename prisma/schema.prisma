// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hoster {
  hosterId               String                     @id
  hosterName             String
  authenticationMethod   HosterAuthenticationMethod
  maxConcurrentDownloads Int                        @default(0)
  downloads              Download[]
  limits                 HosterQuota?
  quotaRenewsAt          DateTime                   @default(now())
}

enum HosterAuthenticationMethod {
  FREE
}

model HosterQuota {
  hourlyDownloadLimit  Int?
  dailyDownloadLimit   Int?
  monthlyDownloadLimit Int?
  updatedAt            DateTime @updatedAt
  hoster               Hoster   @relation(fields: [hosterId], references: [hosterId])
  hosterId             String   @id
}

model Download {
  downloadId  String
  status      DownloadStatus @default(PENDING)
  url         String
  priority    Int            @default(0)
  fingerprint String?
  Hoster      Hoster         @relation(fields: [hosterId], references: [hosterId])
  hosterId    String
  updatedAt   DateTime       @updatedAt

  @@id(name: "downloadIdByHoster", fields: [downloadId, hosterId])
}

enum DownloadStatus {
  PENDING
  DOWNLOADING
  SUCCESS
  FAILED
}
