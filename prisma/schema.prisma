// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hoster {
  id                   String                     @id
  name                 String
  authenticationMethod HosterAuthenticationMethod
  concurrency          Int                        @default(0)
  downloads            Download[]
  limits               HosterQuota?
  releaseAt            DateTime                   @default(now())
}

enum HosterAuthenticationMethod {
  FREE
}

model HosterQuota {
  hourly    Int?
  daily     Int?
  monthly   Int?
  updatedAt DateTime @updatedAt
  hoster    Hoster   @relation(fields: [hosterId], references: [id])
  hosterId  String   @id
}

model Download {
  downloadId  String
  status      DownloadStatus           @default(PENDING)
  url         String
  priority    Int                      @default(0)
  fingerprint String?
  Hoster      Hoster                   @relation(fields: [hosterId], references: [id])
  hosterId    String
  updatedAt   DateTime                 @updatedAt

  @@id(name: "downloadIdByHoster", fields: [downloadId, hosterId])
}

enum DownloadStatus {
  PENDING
  DOWNLOADING
  SUCCESS
  FAILED
}
