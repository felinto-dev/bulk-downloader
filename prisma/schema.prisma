generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hoster {
  id                   String                     @id
  name                 String
  authenticationMethod HosterAuthenticationMethod
  concurrency          Int                        @default(0)
  downloads            Download[]
  limits               HosterLimit?
  downloadsAttempts    DownloadRequestAttempt[]
  releaseAt            DateTime                   @default(now())
}

enum HosterAuthenticationMethod {
  FREE
}

model HosterLimit {
  hourly    Int?
  daily     Int?
  monthly   Int?
  updatedAt DateTime @updatedAt
  hoster    Hoster   @relation(fields: [hosterId], references: [id])
  hosterId  String   @id
}

model Download {
  downloadId  String
  status      DownloadStatus           @default(PENDING)
  url         String
  priority    Int                      @default(0)
  fingerprint String?
  Hoster      Hoster                   @relation(fields: [hosterId], references: [id])
  hosterId    String
  attemps     DownloadRequestAttempt[]
  updatedAt   DateTime                 @updatedAt

  @@id(name: "downloadIdByHoster", fields: [downloadId, hosterId])
}

model DownloadRequestAttempt {
  id         String   @id @default(uuid())
  Download   Download @relation(fields: [downloadId, hosterId], references: [downloadId, hosterId])
  downloadId String
  logs       String?
  createdAt  DateTime @default(now())
  Hoster     Hoster   @relation(fields: [hosterId], references: [id])
  hosterId   String
}

enum DownloadStatus {
  PENDING
  DOWNLOADING
  SUCCESS
  FAILED
}
