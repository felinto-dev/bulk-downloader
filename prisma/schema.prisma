generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hoster {
  id                   String                     @id
  name                 String
  authenticationMethod HosterAuthenticationMethod
  concurrency          Int                        @default(1)
  downloads            Download[]
  limits               HosterLimits?
}

enum HosterAuthenticationMethod {
  FREE
}

model HosterLimits {
  id        String   @id @default(uuid())
  hourly    Int?
  daily     Int?
  monthly   Int?
  updatedAt DateTime @updatedAt
  hoster    Hoster   @relation(fields: [hosterId], references: [id])
  hosterId  String   @unique
}

model Download {
  id          String                   @id @default(uuid())
  downloadId  String
  status      DownloadStatus           @default(PENDING)
  url         String
  priority    Int                      @default(0)
  fingerprint String
  Hoster      Hoster                   @relation(fields: [hosterId], references: [id])
  hosterId    String
  attemps     DownloadRequestAttempt[]

  @@unique(name: "downloadIdByHoster", fields: [downloadId, hosterId])
}

model DownloadRequestAttempt {
  id         String   @id @default(uuid())
  Download   Download @relation(fields: [downloadId], references: [id])
  downloadId String
  logs       String?
  createdAt  DateTime @default(now())
}

enum DownloadStatus {
  PENDING
  WAITING_DOWNLOAD
  SUCCESS
  FAILED
}
